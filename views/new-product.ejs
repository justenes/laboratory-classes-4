<html lang="pl_PL">
  <head>
    <title><%= headTitle %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <main>
      <%- include('partials/navigation', { menuLinks: menuLinks, activeLinkPath: activeLinkPath }); %>
      <h1 class="heading">Newest product</h1>

      <% if (product?.name) { %>
        <br />
        <div>
          New product data - Name: <%= product.name %>, Description: <%= product.description %>
        </div>
      <% } else { %>
        <br />
        <div>No new products available.</div>
      <% } %>
    </main>
  </body>
</html>
